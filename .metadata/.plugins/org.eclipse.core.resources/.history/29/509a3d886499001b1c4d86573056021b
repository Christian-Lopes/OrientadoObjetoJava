package app;

import classes.Animal;
import classes.Cachorro;
import classes.Gato;

public class Programa {

	public static void main(String[] args) {
		Animal animal = new Cachorro("Amorinha", "Pug", 6);
		Gato gato = new Gato("Fiona", "Persa", 1);
		
		System.out.println("============================== CACHORRO ===========================");
		System.out.println("Olá, seu animail é " + animal.getNome() + " da raça " + animal.getEspecie() + "!");
		//cachorro.estaMorto();
		if(animal.adulto()) {
			System.out.println("Seu animal é adulto!");
		}else {
			System.out.println("Seu animal ainda não é adulto!");
		}
		System.out.println("Barulho do cachorro!");
		animal.emitirBarulho();
		System.out.println("============================== GATO ===========================");
		System.out.println("Olá, seu animail é " + gato.getNome() + " da raça " + gato.getEspecie() + "!");
		if(gato.adulto()) {
			System.out.println("Seu animal é adulto!");
		}else {
			System.out.println("Seu animal ainda não é adulto!");
		}
		System.out.println("Barulho do gato.");
		gato.emitirBarulho();
		
	}

}
